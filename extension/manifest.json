{
  "manifest_version": 2,

  "name": "Window POC",
  "description": "Do stuff",
  "version": "1.0",
  "externally_connectable": {
    "matches": [
      "*://localhost/*"
    ]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["index.js"]
  },

  "permissions": [
    "activeTab",
    "notifications",
    "tabs"
  ]
}
